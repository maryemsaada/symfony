{% extends 'base.html.twig' %}

{% block title %}Azur office{% endblock %}

{% block body %}{% endblock %}
{% block home %}

 <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('ogani-master/img/pc.jpg')}}" style="background-image: url(&quot;ogani-master/img/pc.jpg&quot;);">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                      
                        <div class="breadcrumb__option">
                            <a href="./index.html">Home</a>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    
    <!-- Blog Section Begin -->
    <section class="blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <div class="blog__sidebar">
                       
                        
                        <div class="blog__sidebar__item">
                            <h4>new arrivals</h4>
                            <div class="blog__sidebar__recent">
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="blog__sidebar__recent__item__pic">
                                        <img src="ogani-master/img/blog/sidebar/1.jpg" alt="">
                                    </div>
                                    <div class="blog__sidebar__recent__item__text">
                                        <h6>09 Kinds Of Vegetables<br> Protect The Liver</h6>
                                        <span>MAR 05, 2019</span>
                                    </div>
                                </a>
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="blog__sidebar__recent__item__pic">
                                        <img src="{{ asset('ogani-master/img/blog/sidebar/2.jpg')}}" alt="">
                                    </div>
                                    <div class="blog__sidebar__recent__item__text">
                                        <h6>Tips You To Balance<br> Nutrition Meal Day</h6>
                                        <span>MAR 05, 2019</span>
                                    </div>
                                </a>
                                <a href="#" class="blog__sidebar__recent__item">
                                    <div class="blog__sidebar__recent__item__pic">
                                        <img src="ogani-master/img/blog/sidebar/3.jpg" alt="">
                                    </div>
                                    <div class="blog__sidebar__recent__item__text">
                                        <h6>4 Principles Help You Lose <br>Weight With Vegetables</h6>
                                        <span>MAR 05, 2019</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                      
                    </div>
                </div>
                <div class="col-lg-8 col-md-7">
                    <div class="row">
                    <h2>Discover our store's products!</h2>
                     {% for product in products %}
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-decoration-none text-dark">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="{{ asset('uploads/' ~ product.image) }}" alt="" class="img-fluid w-100 rounded-top" style="width: 100px; height: auto;">
                                </div>
                                <div class="blog__item__text">
                                    <h5><a href="#">{{ product.name }}</a></h5>
                                    <p>{{ product.price }} DT</p>
                                    <a href="{{path('app_cart_item_add_to_cart',{'productId': product.id}) }}" class="blog__btn">Add to cart </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        </div>
                        <div class="col-lg-12">
                            <div class="product__pagination blog__pagination">
                                <a href="#">1</a>
                                <a href="#">2</a>
                                <a href="#">3</a>
                                <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Section End -->

{% endblock %}
