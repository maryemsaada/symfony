{% extends 'base.html.twig' %}

{% block title %}Create an account{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal text-center">Create an account</h1>

                {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}

                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
                {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control mb-3', 'placeholder': 'Password'}}) }}

                <div class="form-check mb-3">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">J'accepte les conditions et les r√®gles.</label>
                </div>

                <button type="submit" class="btn btn-lg btn-primary btn-block">Subscribe</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
