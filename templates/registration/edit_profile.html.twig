{# templates/profile/edit_profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Profile
{% endblock %}

{% block home %}
	<div class="container mt-5">
		<h1 class="mb-4">Modify Profil</h1>

		<div class="row justify-content-center">
			<div class="col-md-6">
				{{ form_start(editProfileForm, {'attr': {'class': 'form'}}) }}

				{{ form_row(editProfileForm.email, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Email'}}) }}
				{{ form_row(editProfileForm.newPassword, {'attr': {'class': 'form-control mb-3', 'placeholder': 'New Password'}}) }}

				<button type="submit" class="btn btn-primary">Confirm</button>

				{{ form_end(editProfileForm) }}
			</div>
		</div>
	</div>
{% endblock %}
